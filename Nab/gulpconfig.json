{
  "publish": "full",
  "paths": {
    "stylesheets": {
      "scss": "./Assets/sass/**/*.scss",
      "css": "./wwwroot/css",
      "ignore": "!./Assets/sass/themes/*",
      "themes": "./Assets/sass/themes/",
      "conditionalVendor": "./Assets/css/conditional/*.css"
    },
    "javascript": {
      "srcMain": "./Assets/js/main/**/*.js",
      "mainSite": "./Assets/js/main/site.js",
      "srcStatic": "./Assets/js/static/",
      "srcConditional": "./Assets/js/conditional/**/*.js",
      "srcConditionalIgnore": "!./Assets/js/conditional/angularjs/**/*.js",
      "srcAngular": "./Assets/js/conditional/angularjs/**/*.js",
      "templatesAngular": "./Assets/js/conditional/angularjs/**/*.html",
      "mainAngular": "./Assets/js/conditional/angularjs/app.module.js",
      "dest": "./wwwroot/js",
      "generalSiteLintConfig": "./Assets/js/main/.eslintrc.js",
      "angularjsLintConfig": "./Assets/js/conditional/angularjs/.eslintrc.js"
    }
  }
}