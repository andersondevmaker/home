{
  "publish": "full",
  "paths": {
    "templates": {
      "src": "./src/**/*.html",
      "dest": "./build"
    },
    "stylesheets": {
      "scss": "./Assets/sass/**/*.scss",
      "css": "./wwwroot/css",
      "ignore": "!./Assets/sass/themes/*",
      "themes": "./Assets/sass/themes/"
    },
    "javascript": {
      "files": "./Assets/js/**/*.js",
      "folder": "./wwwroot/js"
    }
  }
}